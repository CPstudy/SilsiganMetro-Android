<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_main_bg"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layoutLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_line_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1호선"
            android:textColor="@color/item_title"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txt_line_way1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="소요산 - 인천/신창"
            android:textColor="#7b7b7b"
            android:textSize="15sp" />

        <View
            android:id="@+id/img_info1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/line_2"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutStation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtLineNumber"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:background="@drawable/icon_linenum"
            android:gravity="center"
            android:minWidth="25dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="2"
            android:textColor="@color/bg_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtLineStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:gravity="left"
            android:text="1호선"
            android:textColor="@color/lab_station"
            android:textSize="@dimen/txt_station" />

    </LinearLayout>

</FrameLayout>
