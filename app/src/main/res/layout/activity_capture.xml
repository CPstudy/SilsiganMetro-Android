<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CaptureActivity">

    <com.ganada.silsiganmetro.view.CustomTitlebar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">


    </com.ganada.silsiganmetro.view.CustomTitlebar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_default"
        android:background="@drawable/item_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ganada.silsiganmetro.view.LineRail
                    android:id="@+id/lineDown4"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="역역역"
                    android:textSize="@dimen/txt_sub"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ganada.silsiganmetro.view.LineRail
                    android:id="@+id/lineDown3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="역역역"
                    android:textSize="@dimen/txt_sub"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent">

                    <com.ganada.silsiganmetro.view.LineRail
                        android:id="@+id/lineDown2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/train_up_only"/>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="역역역"
                    android:textSize="@dimen/txt_station"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ganada.silsiganmetro.view.LineRail
                    android:id="@+id/lineDown1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="역역역"
                    android:textSize="@dimen/txt_sub"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>