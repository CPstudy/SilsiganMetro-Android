<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp">

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fab_line_size"
            android:layout_centerVertical="true"
            android:background="@color/line_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/sta_oxx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_station_left"
                    android:layout_width="@dimen/fab_icon_size_default"
                    android:layout_height="@dimen/fab_icon_size_default"
                    android:src="@drawable/icon_1002_norm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sta_xox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_station_center"
                    android:layout_width="@dimen/fab_icon_size_default"
                    android:layout_height="@dimen/fab_icon_size_default"
                    android:src="@drawable/icon_1002_norm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sta_xxo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_station_right"
                    android:layout_width="@dimen/fab_icon_size_default"
                    android:layout_height="@dimen/fab_icon_size_default"
                    android:src="@drawable/icon_1002_tran" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_circle">

        <TextView
            android:id="@+id/txt_station_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/station"
            android:textColor="@color/lab_subtext"
            android:textSize="@dimen/lab_txt_station" />

        <TextView
            android:id="@+id/txt_station_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/station"
            android:textColor="@color/lab_subtext"
            android:textSize="@dimen/lab_txt_station" />

        <TextView
            android:id="@+id/txt_station_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/station"
            android:textColor="@color/lab_station"
            android:textSize="@dimen/lab_txt_station"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>